// copy to ~/.config/karabiner/karabiner.json
{
    "global": { "check_for_updates_on_startup": false },
    "profiles": [
        {
            "complex_modifications": {
                "parameters": {
                    "basic.to_if_alone_timeout_milliseconds": 200,
                    "basic.to_if_held_down_threshold_milliseconds": 200
                },
                "rules": [
                    {
                        "description": "Map Tab to Hyper when held",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "tab",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to_if_alone": [{ "key_code": "tab" }],
                                "to_if_held_down": [
                                    {
                                        "key_code": "left_shift",
                                        "modifiers": ["left_command", "left_control", "left_option"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Remap Tab to Hyper key when held, Tab when tapped",
                        "enabled": false,
                        "manipulators": [
                            {
                                "from": { "key_code": "tab" },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "modifiers": ["any"]
                                    },
                                    {
                                        "set_variable": {
                                            "name": "hyper",
                                            "value": 1
                                        }
                                    }
                                ],
                                "to_after_key_up": [
                                    {
                                        "set_variable": {
                                            "name": "hyper",
                                            "value": 0
                                        }
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "tab" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 387,
                        "vendor_id": 13364
                    },
                    "manipulate_caps_lock_led": false
                },
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "is_pointing_device": true,
                        "product_id": 387,
                        "vendor_id": 13364
                    },
                    "ignore": false
                }
            ],
            "virtual_hid_keyboard": {
                "country_code": 0,
                "keyboard_type_v2": "iso"
            }
        }
    ]
}
